@model ProjetoWeb.Models.ViewModels.VendedorFormViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Vendedor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Vendedor.Cpf" />
            <div class="form-group">
                <label asp-for="Vendedor.Nome" class="control-label"></label>
                <input asp-for="Vendedor.Nome" class="form-control" />
                <span asp-validation-for="Vendedor.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vendedor.Cargo" class="control-label"></label>
                <input asp-for="Vendedor.Cargo" class="form-control" />
                <span asp-validation-for="Vendedor.Cargo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vendedor.Email" class="control-label"></label>
                <input asp-for="Vendedor.Email" class="form-control" />
                <span asp-validation-for="Vendedor.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vendedor.Celular" class="control-label"></label>
                <input asp-for="Vendedor.Celular" class="form-control" />
                <span asp-validation-for="Vendedor.Celular" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Vendedor.DepartamentId" class="control-label"></label>
                <select asp-for="Vendedor.DepartamentId" asp-items="@(new SelectList(Model.Departaments, "Id", "Nome"))" class="form-control "></select>

            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar a Lista de Vendedores</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
